{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false
  },
  "require": [
    "ts-node/register"
  ],

  "include": [
    "src/**/*.ts",
    "features/**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
